{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install -r requirements.txt"
  },
  "deploy": {
    "startCommand": "uvicorn web_main:app --host 0.0.0.0 --port $PORT",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/health",
    "healthcheckTimeout": 30
  },
  "environments": {
    "production": {
      "build": {
        "builder": "NIXPACKS"
      },
      "deploy": {
        "replicas": 2
      }
    },
    "staging": {
      "build": {
        "builder": "NIXPACKS"
      },
      "deploy": {
        "replicas": 1
      }
    }
  }
}